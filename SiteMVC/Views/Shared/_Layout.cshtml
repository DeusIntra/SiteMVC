<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <header class="py-3 mb-3 border-bottom shadow">
        <div class="d-flex justify-content-around ">
            <div class="col-1"></div>
            <div class="d-flex col-8 justify-content-between align-items-center">
                <div class="d-flex justify-content-around">
                    <a asp-area="" asp-controller="home" asp-action="index"><img src="~/img/Logo-1.png" style="max-height: 60px;" /></a>
                    <ul class="nav col-lg-auto me-lg-auto mb-2 mb-md-0 align-items-center">
                        @{
                            List<string[]> links = new List<string[]>()
                            {
                                new string[] {"about", "Компания"},
                                new string[] {"solutions", "Решения"},
                                new string[] {"clients", "Клиенты"},
                                new string[] {"contact", "Контакты"}
                            };
                        }
                        @for (int i = 0; i < links.Count; i++)
                        {
                            <li class="pl-3"><a asp-area="" asp-controller="home" asp-action="@links[i][0]" class="nav-link link-secondary text-black-50">@links[i][1]</a></li>
                        }
                    </ul>
                </div>
                <a asp-area="" asp-controller="Home" asp-action="Contact"><div class="btn btn-primary">Связаться</div></a>
            </div>
            <div class="col-1"></div>
        </div>
    </header>

    <div class="container p-5">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
        <div class="pb-5"></div>
    </div>

    <footer class="border-top footer text-muted p-4">
        <div class="container">
            <div class="d-flex justify-content-between">
                <div>
                    &copy; 2022 - <a asp-area="" asp-controller="Home" asp-action="Index">"ООО Т-ДЖИН"</a>
                </div>
                <div>Номер телефона</div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
